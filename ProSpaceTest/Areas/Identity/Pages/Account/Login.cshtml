@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-md-4">
        <h1 align="center" class="mb-2">@ViewData["Title"]</h1>
        <section>
            <form id="loginForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Почта</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Пароль" />
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="row m-0">
                    <div class="col d-flex justify-content-center">
                        <div class="form-check">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row m-0">
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary mb-4">Войти</button>
                </div>
                <!-- Register buttons -->
                <div class="row m-0">
                    <div class="text-lg-start col-md-6">
                        <p>
                            Нет аккаунта?
                        </p>
                    </div>
                    <div class="text-lg-end col-md-6">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрируйтесь!</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
